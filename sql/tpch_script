ALTER TABLE POSTS ADD PRIMARY KEY (P_ID);




## Post Growth

SELECT  COUNT(P_ID) as NumPosts, P_DATE as Month, P_POSTTYPE as Type 
FROM    POSTS
GROUP BY YEAR(P_DATE), MONTH(P_DATE), Type
INTO OUTFILE '/tmp/out.csv'
FIELDS TERMINATED BY ','
LINES TERMINATED BY '\n';


