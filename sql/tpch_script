                      P_ID INT NOT NULL,
                      P_POSTTYPE  INT NOT NULL,
                      P_DATE      DATE NOT NULL,
                      P_ORIGTEXT  VARCHAR(1000),
                      P_PRETEXT   VARCHAR(1000)
